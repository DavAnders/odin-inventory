extends layout 

block content
  h1= title
  if category_list.length
    ul
      each category in category_list
          li
              a(href=`/category/${category._id}`)= category.name
                |  - 
                span= category.description
    a(href='./category/create') Create Category
  else
    p No categories found
    a(href='./category/create') Create Category
